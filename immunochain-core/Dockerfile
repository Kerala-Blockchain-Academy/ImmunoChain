FROM python:3.5

# Cassandra driver separatley built with concurrency added for faster build
RUN CASS_DRIVER_BUILD_CONCURRENCY=8 pip3 install cassandra-driver==3.17.0
COPY requirements.txt /install
RUN pip3 install -r /install
WORKDIR /server







                                                                                                                                                                                                                                                   

 
















































































































